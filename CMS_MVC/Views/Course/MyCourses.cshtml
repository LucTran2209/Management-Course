@{
    Layout = "/Views/Shared/_Layout1.cshtml";
}


<style>
    .containerCourse {
        display: flex;
        flex-wrap: wrap;
    }

    .course {
        width: 200px;
        height: 160px;
        background: #FFFFFF;
        justify-content: center;
        word-wrap: break-word;
        margin: 20px;
        border: 1px solid #000; /* Đường viền độ dày 1px, kiểu đường viền solid (đồng đều), màu đen */
        /* Box shadow */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5); /* Hiển thị bóng với độ mờ 10px, màu đen (0, 0, 0), độ trong suốt 0.5 */
    }

    .imgCourse img {
        width: 200px;
        height: 100px;
    }

</style>




<div style="width: 95% ; margin: auto">
    <div class="sub-header" style="height: 140px; margin-top: 60px">
        <h1>CMS - Course Management System</h1>
    </div>
    <h2>My Courses</h2>
    <div class="containerCourse">

        @foreach (var item in ViewBag.ListCourse)
        {
            <div class="course">
                <div class="imgCourse">
                    <img src="~/image/anhtruutuong.jpg" />
                </div>
                <div style="text-align:center">
                    <p> <a asp-action="index" asp-controller="ContentCourse" asp-route-courseId="@item.CourseId"> @item.CourseTitle - @item.Semester </a></p>

                </div>
            </div>
        }
    </div>
</div>
