@{
    Layout = "/Views/Shared/_Layout1.cshtml";
}

<style>
    .tb{
        width : 1000px;
        height: 100px;
    }
</style>

<div style="width: 95% ; margin: auto">
    <div class="sub-header" style="height: 140px; margin-top: 60px">
        <h1>CMS - Course Management System</h1>
    </div>

    <form method="Post" asp-controller="ContentCourse" asp-action="Update">
        <textarea name="status" class="tb" >@ViewBag.Course[0].Status</textarea>

        <button class="btn btn-primary" type="submit"> Update Notification </button>
    </form>
</div>